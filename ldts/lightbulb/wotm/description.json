{
    "@context": [
        "http://w3.org/ns/td",
        { "saref": "https://w3id.org/saref#" },
        { "htv": "http://www.w3.org/2011/http#" }
    ],
    "@type": [ "Thing", "saref#LightingDevice" ],
    "id": "urn:dev:wot:com:example:servient:lamp",
    "name": "Awesome Lightbulb",
    "securityDefinitions": {
        "basic_sc": {"scheme": "basic", "in":"header"}
    },
    "security": ["basic_sc"],
    "properties": {
        "status" : {
            "@type": "saref#OnOffState",
            "readOnly": true,
            "writeOnly": false,
            "observable": false,
            "type": "string",
            "forms": [{
                "href": "{{ . }}/status",
                "contentType": "application/json",
                "htv:methodName": "GET",
                "op": "readproperty"
            }]
        }
    },
    "actions": {
        "toggle" : {
            "@type": "saref#ToggleCommand",
            "idempotent": false,
            "safe": false,
            "forms": [{
                "href": "{{ . }}/toggle",
                "contentType": "application/json",
                "htv:methodName": "POST",
                "op": "invokeaction"
            }]
        }
    },
    "events":{
        "overheating":{
            "data": {"type": "string"},
            "forms": [{
                "href": "{{ . }}/oh",
                "contentType": "application/json",
                "subprotocol": "longpoll",
                "op": "subscribeevent"
            }]
        }
    }
} 