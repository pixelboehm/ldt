{
    "@context": "https://www.w3.org/2019/wot/td/v1",
    "id": "urn:dev:ops:32473-WoTLamp-1234",
    "title": "Awesome Lightbulb",
    "securityDefinitions": {
        "basic_sc": {"scheme": "basic", "in":"header"}
    },
    "security": ["basic_sc"],
    "properties": {
        "status" : {
            "type": "string",
            "forms": [{"href": "{{ .Device }}/status"}]
        },
        "deviceAddress": {
            "type": "string",
            "value": "{{ .Device }}"
        },
        "ldtAddress": {
            "type": "string",
            "value": "{{ .Ldt }}"
        }
    },
    "actions": {
        "on" : {
            "forms": [{"href": "{{ .Device }}/on"}]
        },
        "off" : {
            "forms": [{"href": "{{ .Device }}/off"}]
        }
    },
    "events":{
        "overheating":{
            "data": {"type": "string"},
            "forms": [{
                "href": "{{ .Device }}/oh",
                "subprotocol": "longpoll"
            }]
        }
    }
}